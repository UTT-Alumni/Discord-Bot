{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "airbnb"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "server": false,
    "browser": false,
    "expect": false,
    "logger": "writable"
  },
  "rules": {
    "import/no-relative-packages": 0,
    "import/no-unresolved": 0,
    "camelcase": ["error", { "allow": ["_t$"] }],
    "import/extensions": 0,
    "no-console": 0,
    "comma-dangle": ["error", "always-multiline"],
    "no-unused-vars": "warn",
    "@typescript-eslint/no-unused-vars": 0
  }
}
